@using TechJobs6Persistent.ViewModels
@using TechJobs6Persistent.Models
@model AddJobViewModel


<h1>Add Job</h1>

<form asp-controller="Job" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="EmployerId">Employers</label>
        <select asp-for="EmployerId" asp-items="Model.Employers"></select>
        <span asp-validation-for="Employers"></span>
        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Employer" asp-action="Create">Add Employer</a>
                        </li>
    </div>
    <input 
   type="submit" value="Add Job" />
</form>